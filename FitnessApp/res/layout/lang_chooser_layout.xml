<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="#fff"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <ImageView 
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/lang_choose_title_bg_1" />
        
        <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:text="Válassz egy nyelvet!"
	        android:textSize="20sp"
	        android:textColor="#fff"
	        android:textStyle="italic|bold"
	        android:gravity="center"
	        android:background="@drawable/lang_choose_title_bg_2" />
        
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/btnLangChooseHun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/lang_screen_btn_bgs" >
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:text="Magyar"
            android:textSize="22sp"
            android:textColor="#4d4d4e"
            android:textStyle="italic|bold" />
        
        <ImageView 
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/flag_hun" />
        
    </RelativeLayout>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ccc" />

    <RelativeLayout
        android:id="@+id/btnLangChooseEng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/lang_screen_btn_bgs" >
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:text="Angol"
            android:textSize="22sp"
            android:textColor="#4d4d4e"
            android:textStyle="italic|bold" />
        
        <ImageView 
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/flag_eng" />
        
    </RelativeLayout>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ccc" />
    
    <RelativeLayout
        android:id="@+id/btnLangChooseDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/lang_screen_btn_bgs" >
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:text="Német"
            android:textSize="22sp"
            android:textColor="#4d4d4e"
            android:textStyle="italic|bold" />
        
        <ImageView 
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/flag_de" />
        
    </RelativeLayout>
    
</LinearLayout>

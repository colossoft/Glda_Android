<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linlayTimetableRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="@drawable/location_row_bgs" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="3dp"
        android:background="@drawable/reservation_row_up_color" >
        
        <TextView
            android:id="@+id/tvEventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="2014-11-15"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/tvEventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="10:30 - 12:00"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />
        
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp" >
        
        <TextView
            android:id="@+id/tvReservationTrainerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tvVonal"
            android:text="Dugonics Eszter Magdolna"
            android:textColor="#4d4d4e"
            android:textSize="20sp"
            android:textStyle="italic|bold" />
        
        <TextView
            android:id="@+id/tvReservationTrainingName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tvVonal"
            android:layout_below="@id/tvReservationTrainerName"
            android:text="Alakformáló"
            android:textSize="16sp"
            android:textColor="#ce3334"
            android:textStyle="italic|bold" />
        
        <View
            android:id="@+id/tvVonal"
            android:layout_width="1dp"
            android:layout_height="65dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvReservationTimeTitle"
            android:background="#505252" />
        
        <TextView
            android:id="@+id/tvReservationTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="@string/app_my_reservations_reservationTimeTitle" />
        
        <TextView
            android:id="@+id/tvReservationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvVonal"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/tvReservationTimeTitle"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:text="2014-09-02 13:01" />
        
        <Button 
	        android:id="@+id/btnDeleteReservation"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:layout_toRightOf="@id/tvVonal"
	        android:layout_below="@id/tvReservationTime"
	        android:layout_alignParentRight="true"
	        android:gravity="center"
	        android:background="@drawable/reg_ok_bgs"
	        android:textSize="16sp"
	        android:textColor="#fff"
	        android:textStyle="italic|bold"
	        android:text="@string/app_my_reservation_deleteReservationBtnTitle" />
        
    </RelativeLayout>

</LinearLayout>